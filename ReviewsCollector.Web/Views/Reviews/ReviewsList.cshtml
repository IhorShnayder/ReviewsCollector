@model IEnumerable<ReviewsCollector.Domain.Entities.Review>
@{
    ViewBag.Title = "Reviews list";
}
<div>
    <ul class="list-group">
        @for (int i = 0; i < Model.Count(); i++)
        {
            <li class="list-group-item">@(i + 1). @Model.ElementAt(i).Name</li>
        }
    </ul>
</div>